<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:layout_weight="1"
        android:ems="10"
        android:textSize="40dp"
        android:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/tifany"
        android:text="0" />


    <TableLayout
        android:id="@+id/tl0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/ll0"

        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:text="9" />

            <Button
                android:id="@+id/btDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="OprtarotEvent"

                android:layout_weight="1"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/btMulti"
                android:layout_width="30pt"
                android:layout_marginRight="2pt"
                android:onClick="OprtarotEvent"

                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/btMinus"
                android:layout_width="30pt"
                android:layout_marginRight="2pt"
                android:onClick="OprtarotEvent"

                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btPN"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="+/-" />

            <Button
                android:id="@+id/bt0"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/btDot"
                android:layout_marginRight="2pt"
                android:onClick="NumberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/btPls"
                android:layout_marginRight="2pt"
                android:onClick="OprtarotEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="+" />
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:id="@+id/ll0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btDel"
            android:layout_marginRight="2pt"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:text="Del" />

        <Button
            android:id="@+id/btC"
            android:layout_marginRight="2pt"

            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:text="C" />


        <Button
            android:id="@+id/btEqual"
            android:layout_marginRight="2pt"
            android:onClick="EqualEvent"
            android:layout_width="178dp"
            android:layout_height="30pt"
            android:text="=" />
    </LinearLayout>



</LinearLayout>